doctype html
html(xmlns='http://www.w3.org/1999/xhtml')

  //= template/head.jade

  body
    #wrapper

      //= template/header.jade

      section.middle
        .container
          .content
            h1.title-h1 Регистрация репетитора
            .registration-wrap
              .registration-content
                
                .steps
                  .step
                    .step__counter ШАГ 1
                    p личные данные

                  .step.step--active
                    .step__counter ШАГ 2
                    p профессиональные навыки

                  .step
                    .step__counter ШАГ 3
                    p дополнительная информация

                form.registration-form.clearfix

                  .registration-form__title Профессиональные навыки:

                  .form-group
                    label.control-label(for='input-1') Преподаваемые предметы специализация *
                    .input-wrap
                      input#input-1(type='text' placeholder="Английский язык")

                  .form-group
                    label.control-label(for='input-2') Cтоимость и продолжительность занятия *
                    .input-wrap
                      .half-input
                        input#input-2(type='text' placeholder="____руб.").js-mask-price
                      .half-input
                        input#input-2(type='text' placeholder="____руб.").js-mask-price

                  .form-group
                    label.control-label(for='input-3') Экзамены, к которым готовите
                    .input-wrap
                      input#input-3(type='text' placeholder="Например: русский язык, литература")

                  .form-group
                    label.control-label(for='input-4') Образование: вуз, факультет, специальность, год окончания *
                    .input-wrap
                      input#input-4(type='text')

                  .form-group
                    label.control-label(for='input-2') Cтоимость и продолжительность занятия *
                    .input-wrap.flex-row
                      .flex-col-2
                        input#input-2(type='text' placeholder="c ____ года").js-mask-date
                      .flex-col-6
                        input#input-2(type='text')

                  .form-group
                    label.control-label(for='input-2') Опыт работы в образовательных учреждениях
                    .input-wrap.flex-row
                      .flex-col-2
                        input#input-2(type='text' placeholder="c ____ года").js-mask-date
                      .flex-col-6
                        input#input-2(type='text')

                  .form-group
                    label.control-label(for='input-3') Учёные степени, звания, дипломы и т.п. (с годом получения)
                    .input-wrap
                      input#input-3(type='text')

                  .subtitle Языки, на которых можете вести занятия


                  .row

                    .col-sm-6.col-md-3
                      .checkbox
                        input(type="checkbox" class="checkbox" id="checkbox-1")
                        label(for="checkbox-1") <span></span>
                          .checkbox__text английский
                      .checkbox
                        input(type="checkbox" class="checkbox" id="checkbox-2")
                        label(for="checkbox-2") <span></span>
                          .checkbox__text немецкий
                      .checkbox
                        input(type="checkbox" class="checkbox" id="checkbox-11")
                        label(for="checkbox-11") <span></span>
                          .checkbox__text французский

                    .col-sm-6.col-md-3
                      .checkbox
                        input(type="checkbox" class="checkbox" id="checkbox-3")
                        label(for="checkbox-3") <span></span>
                          .checkbox__text китайский

                      .checkbox
                        input(type="checkbox" class="checkbox" id="checkbox-4")
                        label(for="checkbox-4") <span></span>
                          .checkbox__text испанский

                      .checkbox
                        input(type="checkbox" class="checkbox" id="checkbox-5")
                        label(for="checkbox-5") <span></span>
                          .checkbox__text итальянский

                    .col-sm-6.col-md-3
                      .checkbox
                        input(type="checkbox" class="checkbox" id="checkbox-6")
                        label(for="checkbox-6") <span></span>
                          .checkbox__text японский

                      .checkbox
                        input(type="checkbox" class="checkbox" id="checkbox-7")
                        label(for="checkbox-7") <span></span>
                          .checkbox__text русский

                      .checkbox
                        input(type="checkbox" class="checkbox" id="checkbox-8")
                        label(for="checkbox-8") <span></span>
                          .checkbox__text украинский

                    .col-sm-6.col-md-3
                      .checkbox
                        input(type="checkbox" class="checkbox" id="checkbox-9")
                        label(for="checkbox-9") <span></span>
                          .checkbox__text казахский

                      .checkbox
                        input(type="checkbox" class="checkbox" id="checkbox-10")
                        label(for="checkbox-10") <span></span>
                          .checkbox__text белорусский
                          
                  .submit-wrap
                    button(type="submit").btn.btn-large Следуюший шаг


              .registration-aside

                .teacher-preview.teacher-preview--index.teacher-preview--default
                  .teacher-preview__header
                    .teacher-preview__avatar
                      img(src="https://api.fnkr.net/testimg/106x106/c4c4c4/FFF/?text=106x106", alt="")
                    .rating-wrap
                      .rating-title рейтинг
                      ul.rating
                        li.current(style='width:0%;')
                          span.star1
                        li
                          span.star2
                        li
                          span.star3
                        li
                          span.star4
                        li
                          span.star5


                      .rating-title цены
                      ul.prices-rating
                        li.current(style='width:37%;')
                          span.point-1
                        li
                          span.point-2
                        li
                          span.point-3
                        li
                          span.point-4

                  .teacher-preview__body
                    .teacher-preview__name Смирнова Карина Игоревна
                    .teacher-preview__profession репетитор по английскому языку
                    .teacher-info__description <span class="teacher-info__description-title">Образование:</span> диплом с отличием
                    .teacher-info__description <span class="teacher-info__description-title">Стаж:</span> 2 года
                    .teacher-info__description <span class="teacher-info__description-title">Репетитор:</span> с 2007 г
                    .buttons-wrap
                      a(href="#!").color-grey подробнее
                      a(href="#!").color-blue 97 отзывов
                
                .progress 
                  .progress-bar(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100', style='width: 60%;') 
                  .progress-value 60%

                .subtitle.subtitle--upper необходимо заполнить:

                ul.must-fill
                  li.red Cтоимость и продолжительность занятия 
                  li.red Образование: вуз, факультет, специальность, год окончания
                  li.green.line-through Преподаваемые предметы, специализация

      //= template/footer.jade
